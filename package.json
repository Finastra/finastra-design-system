{
  "name": "@finastra/finastra-design-system",
  "version": "1.6.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/finastra/finastra-design-system.git"
  },
  "license": "MIT",
  "workspaces": [
    "packages/fds-tokens",
    "packages/fds-theme-web",
    "packages/fds-theme-tippy",
    "packages/fds-components-web/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf packages/fds-components-web/**/dist packages/fds-components-web/**/*.css.ts packages/fds-components-web/**/node_modules",
    "generate:component": "plop wc",
    "postgenerate:component": "npm i",
    "prebuild": "npm run build:tokens",
    "prebuild:storybook": "npm run wca && npm run build:theme-web && npm run build:theme-tippy && npm run build",
    "build": "npm run build:style && npm run build:ts -- --verbose",
    "build:scripts": "tsc --project scripts/tsconfig.json",
    "build:tokens": "npm run build -w packages/fds-tokens",
    "build:theme-web": "npm run build -w packages/fds-theme-web",
    "build:theme-tippy": "npm run build -w packages/fds-theme-tippy",
    "build:storybook": "build-storybook -o storybook-static",
    "build:style": "npm run build:style -w packages/fds-components-web",
    "build:ts": "tsc --build packages/fds-components-web/list packages/fds-components-web/menu packages/fds-components-web/textfield packages/fds-components-web",
    "start": "npm run build:theme-web && concurrently npm:watch wds --open",
    "format": "prettier . --write --ignore-path .gitignore",
    "lint": "eslint . --ext .ts --fix",
    "stylelint": "stylelint **/*.scss --fix",
    "compliance:check": "node ./scripts/compliance-check.js",
    "chromatic": "npx chromatic --build-script-name=wc:build:storybook --exit-zero-on-changes",
    "prestorybook": "npm run wca",
    "storybook": "start-storybook -p 8080",
    "storybook:watch": "concurrently npm:watch npm:storybook",
    "test:watch": "npm run test -- --watch",
    "test": "web-test-runner --coverage",
    "watch": "npm run build --watch && node scripts/watcher.js",
    "wca:md": "wca analyze 'packages/fds-components-web/*/src/*.ts' --format markdown --outFiles {dir}/../stories/sb-generated/custom-element.md",
    "postwca:md": "node ./scripts/inject-wca-doc-readme.js",
    "wca": "wca analyze 'packages/fds-components-web/*/src/*.ts' --outFiles {dir}/../stories/sb-generated/custom-element.json",
    "postwca": "node ./scripts/wca-to-storybook.js",
    "bump-all-wc-deps": "npm run build:scripts && node scripts/tsc-out/bump-all-wc-deps.js",
    "version": "npm install --package-lock-only && git add package-lock.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,json}": "prettier --write",
    "**/*.ts": "eslint --fix",
    "*.{css,scss}": "stylelint --fix"
  },
  "devDependencies": {
    "@actions/core": "^1.6.0",
    "@koa/ejs": "5.0.0",
    "@ljcl/storybook-addon-cssprops": "file:ljcl-storybook-addon-cssprops-1.0.1.tgz",
    "@material/mwc-drawer": "0.27.0",
    "@material/mwc-icon": "0.27.0",
    "@material/mwc-icon-button": "0.27.0",
    "@material/mwc-list": "0.27.0",
    "@material/mwc-top-app-bar": "0.27.0",
    "@material/mwc-top-app-bar-fixed": "0.27.0",
    "@open-wc/semantic-dom-diff": "0.19.7",
    "@open-wc/testing": "3.1.6",
    "@storybook/addon-a11y": "^6.4.20",
    "@storybook/addon-actions": "^6.4.13",
    "@storybook/addon-docs": "^6.5.16",
    "@storybook/addon-essentials": "^6.4.13",
    "@storybook/addon-links": "^6.4.13",
    "@storybook/addons": "^6.4.13",
    "@storybook/builder-webpack5": "^6.4.13",
    "@storybook/manager-webpack5": "^6.4.13",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/theming": "^6.4.13",
    "@storybook/web-components": "^7.0.4",
    "@types/command-line-args": "^5.0.0",
    "@types/d3": "6.7.0",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "27.4.1",
    "@types/lodash-es": "^4.17.4",
    "@types/node": "15.6.1",
    "@types/sass": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@web/dev-server": "0.1.30",
    "@web/dev-server-rollup": "0.3.15",
    "@web/test-runner": "0.13.27",
    "@web/test-runner-playwright": "0.8.8",
    "chromatic": "^6.5.1",
    "command-line-args": "^5.1.1",
    "concurrently": "^6.2.1",
    "core-js": "3.15.2",
    "css-loader": "^6.5.0",
    "eslint": "8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^10.0.0",
    "globby": "^11.1.0",
    "husky": "^6.0.0",
    "istanbul-api": "^3.0.0",
    "istanbul-lib-coverage": "^3.0.0",
    "js-yaml": "^4.1.0",
    "lerna": "^6.5.1",
    "lint-staged": "^11.0.0",
    "lit-html": "2.0.2",
    "lodash-es": "^4.17.21",
    "node-sass-import": "^2.0.1",
    "node-watch": "0.7.1",
    "ora": "^5.4.1",
    "plop": "^3.1.2",
    "prettier": "2.8.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-syntax-highlighter": "^15.4.5",
    "rimraf": "^3.0.2",
    "sass": "^1.58.0",
    "sass-loader": "^12.3.0",
    "sinon": "^12.0.1",
    "storybook-addon-designs": "^6.2.1",
    "storybook-dark-mode": "^1.0.8",
    "style-dictionary": "^3.7.2",
    "style-loader": "^1.3.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-prettier": "^2.0.0",
    "tippy.js": "^6.3.7",
    "tslib": "^2.4.0",
    "typescript": "4.7.4",
    "web-component-analyzer": "^1.1.6",
    "webpack": "^5.64.1"
  },
  "engines": {
    "node": "^18",
    "npm": "^9"
  },
  "volta": {
    "node": "18.14.2",
    "npm": "9.5.0"
  }
}
