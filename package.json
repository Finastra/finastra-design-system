{
  "name": "@finastra/finastra-design-system",
  "version": "3.10.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/finastra/finastra-design-system.git"
  },
  "license": "MIT",
  "workspaces": [
    "themes/fds-theme",
    "themes/tippy.js",
    "libs/web-components/*"
  ],
  "scripts": {
    "build:fds-theme": "npm run build -w themes/fds-theme",
    "build:tippy-theme": "npm run build -w themes/tippy.js",
    "build:scripts": "tsc --project scripts/tsconfig.json",
    "build": "npm run build:style && npm run build:ts -- --verbose",
    "build:style": "npm run build:style -w libs/web-components",
    "build:ts": "tsc --build libs/web-components/list libs/web-components/menu libs/web-components/textfield libs/web-components",
    "prebuild:storybook": "npm run wca && npm run build:fds-theme && npm run build:tippy-theme && npm run build",
    "build:storybook": "build-storybook -o storybook-static",
    "compliance:check": "node ./scripts/compliance-check.js",
    "format": "",
    "start": "npm run build:fds-theme && concurrently npm:wc:watch wds --open",
    "prestorybook": "npm run wca",
    "storybook": "start-storybook -p 8080",
    "test": "web-test-runner --coverage",
    "test:watch": "npm run wc:test -- --watch",
    "watch": "npm run build --watch && node scripts/watcher.js",
    "clean": "rimraf libs/web-components/**/dist libs/web-components/**/*.css.ts libs/web-components/**/node_modules",
    "bump-all-wc-deps": "npm run build:scripts && node scripts/tsc-out/bump-all-wc-deps.js",
    "wca": "wca analyze 'libs/web-components/*/src/*.ts' --outFiles {dir}/../stories/sb-generated/custom-element.json",
    "postwca": "node ./scripts/wca-to-storybook.js",
    "wca:md": "wca analyze 'libs/web-components/*/src/*.ts' --format markdown --outFiles {dir}/../stories/sb-generated/custom-element.md",
    "postwca:md": "node ./scripts/inject-wca-doc-readme.js",
    "chromatic": "npx chromatic --build-script-name=wc:build:storybook --exit-zero-on-changes",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts --fix --ignore-path .gitignore"

  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": ""    
  },
  "devDependencies": {
    "@actions/core": "^1.6.0",
    "@ljcl/storybook-addon-cssprops": "file:ljcl-storybook-addon-cssprops-1.0.1.tgz",
