{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",

    "outDir": "./tsc-out",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,

    "lib": ["es2017", "esnext.asynciterable", "DOM"],

    "declaration": true,
    "sourceMap": true,
    "pretty": true
  },
  "include": ["**/*.ts"],
  "exclude": ["tsc-out/**/*"]
}
